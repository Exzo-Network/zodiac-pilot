{
  "name": "transaction-simulator",
  "version": "1.0.0",
  "description": "Chrome extension to simulate dApp interactions and record transactions",
  "main": "index.js",
  "repository": "https://github.com/gnosis/transaction-simulator.git",
  "author": "Jan-Felix <jan-felix.schwarz@gnosis.io>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "prebuild": "rimraf build",
    "build": "NODE_ENV=production node esbuild.js",
    "dev": "NODE_ENV=development node esbuild.js",
    "check": "yarn check:prettier && yarn check:lint && yarn check:spelling",
    "check:lint": "eslint src --ext .ts,.tsx",
    "check:prettier": "prettier \"src/**/*.(ts|tsx)\" --list-different",
    "check:spelling": "cspell \"**\"",
    "fix": "yarn fix:prettier && yarn fix:lint",
    "fix:prettier": "prettier \"src/**/*.(ts|tsx)\" --write",
    "fix:lint": "eslint src --ext .ts --fix"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.164",
    "@types/events": "^3.0.0",
    "@types/react": "^17.0.35",
    "@types/react-dom": "^17.0.11",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "@web3-react/core": "^6.1.9",
    "cspell": "^5.13.0",
    "esbuild": "^0.13.14",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.26.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "ethers": "^5.5.1",
    "events": "^3.3.0",
    "prettier": "^2.4.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rimraf": "^3.0.2",
    "typescript": "^4.5.2"
  }
}
