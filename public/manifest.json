{
  "name": "Transaction Simulator",
  "description": "Simulate dApp interactions and record transactions",
  "version": "1.0",
  "manifest_version": 3,
  "icons": {
    "16": "zodiac.png",
    "32": "zodiac.png",
    "48": "zodiac.png",
    "128": "zodiac.png"
  },
  "action": {
    "default_title": "Open the Transaction Simulator"
  },
  "permissions": ["tabs", "webRequest", "declarativeNetRequest"],
  "background": {
    "service_worker": "build/background.js"
  },
  "host_permissions": ["<all_urls>"],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "removeHeader",
        "enabled": true,
        "path": "removeHeaders.json"
      }
    ]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "run_at": "document_end",
      "all_frames": true,
      "js": ["build/contentScript.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["build/inject.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
